@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-xs-12 quick-search">
        <form class="quick-search-form">
            <input type="text" class="form-control" />
        </form>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <h4>Recommended</h4>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="row social-banks-list">
            <div class="col-xs-4 col-lg-3">
                <div class="social-bank-wrapper">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="social-bank-cover">
                                <a href="#">
                                    <img src="~/Content/themes/common-files/img/crew/oxana-n.png" />
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="social-bank-info">
                            <div class="col-xs-12 social-bank-description">
                                <h6 class="description-title">Description</h6>
                                <a href="#">
                                    <p class="description-content">
                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla quam velit, vulputate eu pharetra nec.
                                    </p>
                                </a>
                            </div>
                            <div class="col-xs-12 social-bank-address">
                                <p class="address">
                                    Social Street Avenue - BRAZIL
                                </p>
                            </div>
                            <div class="col-xs-12 circulating-rate">
                                <h6 class="circulating-rate-title">Circulating rate:</h6>
                                <div class="progress">
                                    <div class="progress-bar-info" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">60%</div>
                                </div>
                            </div>
                            <div class="col-xs-12 donate-now">
                                <button class="btn btn-primary social-bank-donate-button">Donate Now!</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row find-more-sb-row">
            <div class="col-xs-12">
                <div class="find-more-sb">
                    <button class="btn btn-danger">FIND MORE SOCIAL BANKS</button>
                </div>
            </div>
        </div>
    </div>
</div>