@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="div-create-bank">
    <h2>Create a New Social Bank</h2>
    <form id="form-create-bank">
        <label>Social Bank's name:</label>
        <input type="text" id="name" name="name" value="" />
        <label>Social Money:</label>
        <input type="text" id="socialMoneyName" name="socialMoneyName" value="" />

        It needs to be different from the social bank's name.

        <label>Social Bank's description:</label>
        <textarea id="description" name="description"></textarea>

        <label>Bitcoin address for donations:</label>
        <input type="text" id="bitcoinAddressForDonation" name="bitcoinAddressForDonation" value="" />

        <label>Social Bank's address:</label>
        <textarea id="address" name="address"></textarea>

        <label>Zip Code:</label>
        <input type="text" id="zipcode" name="zipcode" value="" />

    </form>

    <button id="btn-create-bank">NEXT</button>

</div>

<div id="div-create-user" style="display: none">
    <h2>Create Administrator User for Social Bank</h2>
    <form id="form-create-user">
        <label>e-mail/login:</label>
        <input type="text" id="email" name="email" value="" />
        <label>First Name:</label>
        <input type="text" id="firstName" name="firstName" value="" />
        <label>Password:</label>
        <input type="password" id="password" name="password" value="" />
        <label>Confirm Password:</label>
        <input type="password" id="password2" name="password2" value="" />

    </form>

    <button id="btn-create-user">NEXT</button>
</div>

<div id="div-create-passphrase" style="display: none">
    <h2>Create Passphrase</h2>
    <input type="text" id="passphrase" name="passphrase" readonly />
    <br />
    <button id="btn-create-passphrase">create</button>
    <br />
    <button id="btn-finish">FINISH</button>
</div>

@section Scripts {

    @Scripts.Render("~/Content/Scripts/CreateSocialBank.js")
    <script>
        new CreateSocialBank($).Ready();
    </script>
}